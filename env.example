# Environment Variables Template
# Copy this file to .env and fill in your actual values

# Node Environment
NODE_ENV=development

# Server Configuration
PORT=5000

# MongoDB Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/mern-bug-tracker?retryWrites=true&w=majority
MONGODB_TEST_URI=mongodb+srv://username:password@cluster.mongodb.net/mern-bug-tracker-test?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRE=30d

# CORS Configuration
FRONTEND_URL=http://localhost:3000
FRONTEND_PRODUCTION_URL=https://your-frontend-domain.com

# Optional: Slack Integration
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Optional: Sentry Error Tracking
SENTRY_DSN=https://your-sentry-dsn-here

# Optional: Logging
LOG_LEVEL=info

# Production Specific
# These will be set by your deployment platform
# RENDER_SERVICE_ID=your-render-service-id
# VERCEL_TOKEN=your-vercel-token
# VERCEL_ORG_ID=your-vercel-org-id
# VERCEL_PROJECT_ID=your-vercel-project-id
